<% results_array = [] %>
  <% @restaurants.each do |restaurant| %>
  	<% if restaurant.name.upcase.include?(params[:query].upcase) %>
  	 <% results_array << restaurant %>
  	<% end %>
<% end %>

<ul>
  <% results_array.each do |restaurant| %>
    <li>  
      <%= link_to restaurant.name, restaurant_path(restaurant.id) %> 
    </li> 
  <% end %>
</ul>

<%= link_to "Back to Homepage", restaurants_path %> 